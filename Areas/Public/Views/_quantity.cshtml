<template data-template-dialog-quantity>
    <style>
        [data-dialog-quantity] {
            border: none;
            padding: 1rem;
            border-radius: 6px;
            color: var(--gray-dark);
            user-select: none;
            box-shadow: 2px 2px 20px var(--grey);
            width: clamp(300px, 50vw, 600px);

            &[open] {
                display: flex;
                flex-direction: column;
                margin: auto;
            }

            label {
                all: revert;
                line-height: 1.7;
                font-size: 1.2rem;
                margin-bottom: 3rem;

                strong {
                    color: var(--red);
                    text-decoration: underline;
                }
            }

            input[type="number"] {
                outline: none;
                border-radius: 4px;
                border: 1px solid var(--border);
                padding: 1rem;
            }

            footer {
                display: flex;
                position: sticky;
                bottom: 0;
                padding: 3rem 0 0;
                justify-content: flex-end;
                gap: 1rem;

                button {
                    outline: none;
                    border: none;
                    border: 1px solid var(--primary);
                    color: var(--red);
                    padding: .7rem 1rem;
                    text-transform: uppercase;
                    background-color: transparent;

                    &[data-submit] {
                        background-color: var(--primary);
                        color: var(--white);
                    }
                }
            }
        }
    </style>
    <dialog data-dialog-quantity>
        <label></label>
        <input min="1" type="number" value="1" />
        <footer>
            <button data-cancel type="button">Cancel</button>
            <button data-submit type="button">Submit</button>
        </footer>
    </dialog>
</template>