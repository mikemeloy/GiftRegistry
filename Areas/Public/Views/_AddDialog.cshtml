@model i7MEDIA.Plugin.Widgets.Registry.Models.ListViewModel

@{
    var registryTypes = Model.RegistryTypes;
}
<dialog class="round" data-modal-add>
    <header>
        <h4>Create a New Registry!</h4>
        <i data-modal-close class="fal fa-times"></i>
    </header>
    <main>
        <section>
            <label for="name">Name</label>
            <input class="form-control text-box single-line" data-add-name type="text" name="name" autofocus />
        </section>
        <section>
            <label for="description">Description</label>
            <input class="form-control text-box single-line" data-add-description type="text" name="description" />
        </section>
        <section>
            <label for="eventdate">Event Date</label>
            <input class="form-control text-box single-line" data-add-event-date type="date" name="eventdate" />
        </section>
        <section>
            <label>Partner</label>
            <select class="form-control text-box single-line"></select>
        </section>
        <section>
            <label>Consultant</label>
            <select class="form-control text-box single-line"></select>
        </section>
        <section>
            <label>Event Type</label>
            <select data-add-event-type class="form-control text-box single-line">
                <option value="0">Select One...</option>
                @{
                    foreach (var item in registryTypes)
                    {
                        <option title="@item.Description" value="@item.Id">@item.Name</option>
                    }
                }
            </select>
        </section>

        <section>
            <label for="notes">Summary</label>
            <textarea class="form-control text-box" data-add-notes rows="3" multiple type="text"
                name="notes"></textarea>
        </section>
    </main>
    <footer>
        <button data-registry-save class="button-1">Save</button>
        <input type="hidden" data-add-id>
    </footer>
</dialog>